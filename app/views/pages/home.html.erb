

<header>
  <div class="overlay"></div>
  <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
    <source src="<%= video_path 'video.mp4'%>" type="video/mp4">
  </video>
  <div class="container h-100">
    <div class="d-flex h-100 text-center align-items-center">
      <div class="w-100 text-white">
        <h3 class="display-4">Start your wellbeing journey </h3>

        <% if !user_signed_in? %>
          <p> <%= link_to 'Sign up', new_user_registration_path, class: "btn btn-outline-light"%>
          </p>
          <% elsif current_user.role == "Trainer" %>
            <%= link_to " To Dashboard", trainers_dashboards_path, class: "btn btn-outline-light"%>
          <% elsif current_user.role == "Employee" %>
            <%= link_to " To Dashboard", employees_dashboards_path, class: "btn btn-outline-light"%>
          <% end %>
      </div>
    </div>
  </div>
</header>


<div class= "main-container">
  <div class= "containerbox">
    <div class="item">
      <i class="fa fa-check-circle fa-lg" ></i>
      <p class="mt-2 mb-2">Company wellness made convenient and accessible</p>
    </div>
    <div class="item">
      <i class="fa fa-check-circle fa-lg"></i>
      <p class="mt-2 mb-2"> Online classes. No travel </p>
    </div>
    <div class="item">
      <i class="fa fa-check-circle fa-lg"></i>
      <p class="mt-2 mb-2">Lots of activities and trainers to choose from</p>
    </div>
  </div>
</div>


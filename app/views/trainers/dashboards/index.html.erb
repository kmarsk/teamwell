<h1>DASHBOARD!</h1>

<%= link_to "Click to Create new Class", new_trainers_activity_path %>

<div class="container">
  <div class="cards">
    <% @activities.each do |activity| %>
      <%= link_to trainers_activity_path(activity.id) do %>

        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path activity_image_key(activity) %>)">
          <%= activity.category %>
        </div>
      <% end %>
    <% end %>
  </div>

<p>Future bookings</p>
<div class="cards">
    <% @bookings.each do |booking| %>
      <%= link_to trainers_activity_path(booking.schedule.activity.id) do %>

        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path activity_image_key(booking.schedule.activity) %>)">
          <%= booking.schedule.activity.category %> - <%= booking.schedule.date_formatted %>
        </div>
      <% end %>
    <% end %>
  </div>

</div>  